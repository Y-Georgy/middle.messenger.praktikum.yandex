<nav>
  <a href="/profile">Профиль</a>
  <input type="text" placeholder="Поиск" />
  <ul>
    {{#each recipients}}
      <li>
        <div class="{{this.styles.recipient}}">
          <div class="{{this.styles.avatarOverlay}}">
            {{#if this.avatarLink}}
              <img
                class="{{styles.avatar}}"
                src="{{this.avatarLink}}"
                alt="Аватар пользователя"
              />
            {{/if}}
          </div>
          <div>
            <h3 class="{{styles.name}}">{{this.name}}</h3>
            <p class="{{styles.message}}">
              {{#if this.lastMessage.isMy}}<span>Вы: </span>{{/if}}
              {{this.lastMessage.text}}
            </p>
          </div>
          <p class="{{styles.time}}">{{this.lastMessage.time}}</p>
          {{#if this.unreadCount}}<p class="{{styles.unreadCount}}">{{this.unreadCount}}</p>{{/if}}
        </div>
      </li>
    {{/each}}
  </ul>
</nav>
<div class="{{styles.chat}}">
  <div class="{{styles.currentRecipent}}">
    <div class="{{styles.avatarOverlay}}">
      {{#if currentRecipent.avatarLink}}
      <img class="{{styles.avatar}}" src="{{currentRecipent.avatarLink}}" alt="Аватар пользователя" />
      {{/if}}
    </div>
    <h2>{{currentRecipent.name}}</h2>
    <button>
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>
  <ul class="{{styles.messages}}">
    {{#each currentRecipent.messages}}
    <li>
      {{#if this.day}}
        <h5>{{this.day}}</h5>
      {{/if}}
      <div class="{{styles.message}}{{#if isMy}} {{styles.messageRight}}{{/if}}">
        <p>{{this.text}}</p>
        <span>{{this.time}}</span>
      </div>
    </li>
    {{/each}}
  </ul>
  <form class="{{styles.newMessageForm}}" name="newMessage">
    {{#if error}}<span>{{error}}</span>{{/if}}
    <button class="{{styles.attach}}" type="button"></button>
    <input class="{{styles.inputText}}" type="text" placeholder="Сообщение" name="message" id="message" />
    <button class="{{styles.submit}}" type="submit" {{#if isDisabledFormMessage}}disabled{{/if}}></button>
  </form>
</div>
